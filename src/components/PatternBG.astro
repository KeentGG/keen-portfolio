---
import { cn } from '../utils/utils.ts'

const { patternClass } = Astro.props
---

<div class="absolute *:absolute *:w-full *:h-full w-full h-full z-[0]">
    <div
        class={cn(
            'z-10 bg-[radial-gradient(rgba(0,0,0,0)1px,#111728_2px)] bg-[length:19px_19px] backdrop-brightness-100 left-0 top-0 right-0',
            patternClass
        )}
    >
    </div>
    <div class="z-0">
        <slot />
    </div>
</div>
